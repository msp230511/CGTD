<%= form_with model: @TodoEntry, method: :post, url: {action: "create"}, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <%= f.label :priority %>
    <%= f.select :priority, [["High", 3], ["Medium", 2], ["Low", 1]], selected: "Low" %>
    <br>
    <%= f.label :category %>
    <%= f.text_field :category %>
    <br>
    <%= f.label :due_at %>
    <%= f.date_select :due_at %>
    <br>
    <%= f.submit "Create new to-do item" %>
<% end %>