<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div class="card bg-light mb-3" style="max-width: 25rem;">
  <div class="card-header"><h2>Create New Task</h2></div>
  <div class="card-body">
    <%= form_with model: @todo_entry, method: :post, url: todo_entries_path, local: true do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br>
        <br>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <br>
        <br>
        <%= f.label :priority %>
        <%= f.select :priority, [["High", 3], ["Medium", 2], ["Low", 1], ["None", nil]], selected: "Low" %>
        <br>
        <br>
        <%= f.label :category %>
        <%= f.select :category, [["Personal", "Personal"], ["Work", "Work"], ["None", "None"]], selected: "None" %>
        <br>
        <br>
        <%= f.label :due_at %>
        <%= f.date_select :due_at %>
        <br><br>
        <%= f.submit("Create", :class => "btn btn-primary") %> 
        <%= link_to("Back", todo_entries_path, :class => "btn btn-secondary") %>
      <% end %>
  </div>
</div>


